{
  "compilerOptions": {
    "paths": {
      "*/": ["./node_modules/*"],
      "_Shared/*": ["./src/_shared/*"]
    },
    "checkJs": true,
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"]
}
